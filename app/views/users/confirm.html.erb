<h1>Sign Up Confirmation</h1>

<div class='row'>
    <div class='col-md-4'>
        <h2>Are you sure these values are correct?</h2>
        <h4><strong>Email: <%= @user.email %></strong></h4>
        <h4><strong>Name: <%= @user.name %></strong></h4>
    </div>
</div>

<div class='row'>
    <div class='col-md-4'>
        <%= button_to "Yes", { :controller => 'users', :action => 'create', :params => params }, class: 'btn btn-success' %>
    </div>
</div>

<div class='row'>
    <div class='col-md-4'>
        <%= button_to "No", { :controller => 'users', :action => 'new', :params => params }, class: 'btn btn-failure', :method => :get %>
    </div>
</div>
